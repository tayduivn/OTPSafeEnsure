<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle" android:color="@color/white">
            <gradient android:angle="180" android:endColor="#FFCCCCCC" android:startColor="@android:color/white" />

            <stroke android:width="1dp" android:color="@color/dialog_btn_press" />

            <solid android:color="@color/dialog_btn_press" />

            <corners android:bottomLeftRadius="@dimen/dp_radius" />
        </shape></item>
    <item><shape android:shape="rectangle" android:color="@color/white">
            <gradient android:angle="180" android:endColor="#FFCCCCCC" android:startColor="@android:color/white" />

            <stroke android:width="1dp" android:color="@android:color/white" />

            <solid android:color="@color/white" />

            <corners android:bottomLeftRadius="@dimen/dp_radius" />
        </shape></item>

</selector>