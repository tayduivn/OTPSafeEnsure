<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tb_dialog_toolbar"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:id="@+id/rl_login_photo2"
                android:layout_width="match_parent"
                android:layout_height="287.3dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="38.7dp"
                    android:layout_marginTop="32.3dp"
                    android:background="@drawable/bangidng_success" />

                <TextView
                    android:id="@+id/tv_binding4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="恭喜您，设备绑定成功"
                    android:textAlignment="center"
                    android:textColor="#00e8fd"
                    android:textSize="17sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_binding3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="42.3dp"
                android:layout_marginTop="320dp"
                android:gravity="center"
                android:text="请点击下一步设置手势密码"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17sp" />


        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btn_binding_next2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#0086fd"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_content2" />

    </LinearLayout>


</LinearLayout>