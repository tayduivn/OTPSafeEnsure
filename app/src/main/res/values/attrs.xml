<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomSwitch">
        <attr name="imgON" format="reference" />
        <attr name="imgOFF" format="reference" />
    </declare-styleable>


    <!-- 自定义CustomImageView的属性 -->
    <declare-styleable name="CustomImageView">
        <attr name="press_alpha" format="integer" />
        <attr name="press_color" format="color" />
        <attr name="radius1" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="shape_type" format="enum">
            <enum name="round" value="0" />
            <enum name="rectangle" value="1" />
        </attr>
    </declare-styleable>

    <!-- 自定义CustomButton -->
    <declare-styleable name="CustomButton">
        <attr name="press_alpha1" format="integer" />
        <attr name="press_color1" format="color" />
        <attr name="border_width1" format="dimension" />
        <attr name="border_color1" format="color" />
        <attr name="shadow_color1" format="color" />
    </declare-styleable>

    <declare-styleable name="MaterialProgressBar">
        <attr name="progressColour" format="color" />
        <attr name="secondaryProgressColour" format="color" />
        <attr name="backgroundColour" format="color" />
        <attr name="duration" format="integer" />
    </declare-styleable>


    <attr name="color_up_ring" format="color" />
    <attr name="color_on_ring" format="color" />
    <attr name="color_on_line" format="color" />
    <attr name="color_error_line" format="color" />
    <attr name="color_error_ring" format="color" />
    <attr name="inner_color_up_ring" format="color" />
    <attr name="inner_color_on_ring" format="color" />
    <attr name="inner_color_error_ring" format="color" />
    <attr name="outer_ring_spacing_width" format="dimension" />
    <attr name="inner_ring_width" format="dimension" />
    <attr name="inner_background_width" format="dimension" />
    <declare-styleable name="GestureLock_styleable">
        <!--普通连线的颜色-->
        <attr name="color_on_line" />
        <!--错误连线的颜色-->
        <attr name="color_error_line" />
        <!--普通状态下圈的颜色-->
        <attr name="color_up_ring" />
        <!--按下状态下圈的颜色-->
        <attr name="color_on_ring" />
        <!--错误时的颜色-->
        <attr name="color_error_ring" />
        <!--普通状态下圈的颜色-->
        <attr name="inner_color_up_ring" />
        <!--按下状态下圈的颜色-->
        <attr name="inner_color_on_ring" />
        <!--错误时的颜色-->
        <attr name="inner_color_error_ring" />
        <!--外圈与外圈之间的间距-->
        <attr name="outer_ring_spacing_width" />
        <!--内圆大小-->
        <attr name="inner_ring_width" />
        <!--内圆背景大小-->
        <attr name="inner_background_width" />
    </declare-styleable>
</resources>
